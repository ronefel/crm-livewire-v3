#!/usr/bin/env sh
#. "$(dirname -- "$0")/_/husky.sh"

# Cores
NC='\033[0m'
BBlue='\033[1;34m'
BRed='\033[1;31m'

# Rodar o phpstan
./vendor/bin/phpstan
if [ $? -ne 0 ]; then
    echo -e "${BRed}Opa! Deu ruim aqui com PHPSTAN. Arrume antes de continuar... ðŸ˜‰ ${NC}"
    exit 1
fi

# rodar os testes
php artisan test --parallel
if [ $? -ne 0 ]; then
    echo -e "${BRed}Opa! Deu ruim aqui com algum teste. Arrume antes de continuar... ðŸ˜‰ ${NC}"
    exit 1
fi

# Formatar cada arquivo alterado usando o Laravel Pint
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep ".php\{0,1\}$") || true

for FILE in $STAGED_FILES
do
    ./vendor/bin/pint "${FILE}" > /dev/null >&1
    git add "${FILE}"
done

exit 0
